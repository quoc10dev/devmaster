@{
    Layout = "_LoginLayout";
}
@model LogIn

<div class="login-box">
    <div class="login-logo">
        <a asp-controller="Home" asp-action="Index"><b>CMS | </b>Phần Mềm Quản Lý Đào Tạo</a>
    </div>
    <!-- /.login-logo -->
    <div class="card">
        <div class="card-body login-card-body">
            <p class="login-box-msg">Sign in to start your session</p>

            <form action="Login" method="post">
                <div class="input-group mb-3">
                    <input type="text" asp-for="Username" class="form-control" placeholder="Username">
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span class="fas fa-envelope"></span>
                        </div>
                    </div>
                </div>
                <div class="input-group mb-3">
                    <input type="password" asp-for="Password" class="form-control" placeholder="Password">
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span class="fas fa-lock"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-8">
                        <div class="icheck-primary">
                            <input type="checkbox" id="remember" asp-for="RememberMe">
                            <label for="remember">
                                Remember Me
                            </label>
                        </div>
                    </div>

                    <div class="col-4">
                        <button type="submit" class="btn btn-primary btn-block">Sign In</button>
                    </div>

                </div>
                <div asp-validation-summary="All" class="text-danger"></div>
            </form>
        </div>
        <!-- /.login-card-body -->
    </div>
</div>