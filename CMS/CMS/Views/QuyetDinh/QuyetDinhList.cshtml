@model ModelHolder

@section Style{
    <link rel="stylesheet" href="~/genecss/single-choices-input.css" />  
    <style>
        #new-quyetdinh-form-container {
            display: none;
            height: 350px;
        }
    </style>
}
<div class="container-fluid pt-5">
    <div id="new-quyetdinh-form-container" style="padding-left:20px" class="container-fluid">
        <h3 class="mb-4">Tạo mới Quyết Định</h3>
        <div asp-validation-summary="All" class="text-danger"></div>
        <form method="post" asp-action="CreateQuyetDinh" enctype="multipart/form-data">
            <div class="row">
                <div class="col-4">
                    <label class="form-label" asp-for="CreateQuyetDinh.QuyetDinh.SoQuyetDinh">Số Quyết Định</label>
                    <input class="form-control" asp-for="CreateQuyetDinh.QuyetDinh.SoQuyetDinh" type="text" />
                    <span asp-validation-for="CreateQuyetDinh.QuyetDinh.SoQuyetDinh" class="text-danger"></span>
                </div>
                <div class="col-4">
                    <label class="form-label" asp-for="CreateQuyetDinh.QuyetDinh.IdDonViDaoTao">Đơn Vị Đào Tạo</label>
                    <select id="donvi-list-select-newqd" data-trigger="">
                        <option value="0" placeholder="">Chọn Đơn Vị</option>
                        @foreach(var donvi in Model.DVDTs)
                        {
                            <option value="@donvi.Id">@donvi.TenDonViDaoTao</option>
                        }
                    </select>
                    <span asp-validation-for="CreateQuyetDinh.QuyetDinh.IdDonViDaoTao" class="text-danger"></span>
                    <input id="input-id-donvi" value="0" asp-for="CreateQuyetDinh.QuyetDinh.IdDonViDaoTao" type="hidden" />
                </div>
                <div class="col-4">
                    <label class="form-label" asp-for="CreateQuyetDinh.QuyetDinh.NgayQuyetDinh">Ngày Quyết Định</label>
                    <input id="input-ngay-quyetdinh" type="text" asp-for="CreateQuyetDinh.QuyetDinh.NgayQuyetDinh" class="form-control"/>
                </div>
            </div>
            <div class="row mt-3">
                <div class="col-12">
                    <label asp-for="CreateQuyetDinh.PDF" class="form-label">File Quyết Định (PDF)</label>
                    <input class="form-control" type="file" asp-for="CreateQuyetDinh.PDF" />
                </div>
            </div>
            <div class="row mt-4">
                <div class="col-12 d-flex justify-content-center">
                    <button type="submit" class="btn btn-primary">Lưu lại</button>
                    <button type="button" onclick="cancelThemQuyetDinhForm()" class="btn btn-danger ms-4">Đóng</button>
                </div>
            </div>
        </form>
    </div>

    <h3 class="mb-4" style="margin-left:20px;">Danh Sách Quyết Định</h3>
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <div class="d-flex align-items-center justify-content-end">
                        <div class="ms-5 align-self-start"><button onclick="btnThemQuyetDinhClick()" class="btn btn-success">Thêm quyết định <i class="fas fa-plus ms-1"></i></button></div>
                    </div>
                </div>
                <!-- /.card-header -->
                <div class="card-body">
                    <table id="table-quyetdinhs" class="table">
                        <thead>
                            <tr>
                                <th>Số Quyết Định</th>
                                <th>Ngày Quyết Định</th>
                                <th>Đơn Vị</th>
                                <th>File</th>
                                <th class="text-center">Thao Tác</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var qd in Model.QuyetDinhs)
                            {
                                <tr>
                                    <td>@qd.SoQuyetDinh</td>
                                    <td>@qd.NgayQuyetDinh.ToShortDateString()</td>
                                    <td>@qd.DonViDaoTao.TenDonViDaoTao</td>
                                    <td><a href="..@qd.AnhQuyetDinh" target="_blank">@((qd.AnhQuyetDinh.Split("/")).Last())</a></td>
                                    <td>
                                        <div class="d-flex justify-content-center">
                                            <button onclick="openQuyetDinhDetailPage(@qd.Id)" class="btn btn-success btn-sm btn-circle"><i class="fas fa-info-circle"></i></button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script>
        $(document).ready(function(){     
            var invalidModel = '@TempData["InvalidModel"]';
            if (invalidModel) {
                $("#new-quyetdinh-form-container").css("display", "block");
            }
            var mess = '@TempData["ErrorMess"]';
            if (mess) {
                alert(mess);
            }
        });
        new DataTable("#table-quyetdinhs");
        function btnThemQuyetDinhClick() {
            $("#new-quyetdinh-form-container").slideDown();
            $("html, body").scrollTop(0);
        }
        function cancelThemQuyetDinhForm() {
            $("#new-quyetdinh-form-container").slideUp();
        }
        const donvi_choices_newqd = new Choices($("#donvi-list-select-newqd")[0], {
            searchEnabled: true
        });
        $("#donvi-list-select-newqd").on('change',function(e){
            $("#input-id-donvi").val(e.detail.value);
        });

        try {

            $('#input-ngay-quyetdinh').daterangepicker({
                singleDatePicker: true,
                autoApply: true,
                applyButtonClasses: false,
                autoUpdateInput: true,
                startDate: moment().startOf('hour'),
                locale: {
                    format: 'DD/MM/YYYY'
                }
            }, function (start) {
                $('#input-ngay-quyetdinh').val(start.format('DD/MM/YYYY'));
            });


        } catch (er) { console.log(er); }

        function openQuyetDinhDetailPage(id){
            window.open(location.origin + `/QuyetDinh/QuyetDinhDetail?idqd=${id}`, '_self');
        }
    </script>
}