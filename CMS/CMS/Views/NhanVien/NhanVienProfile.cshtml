@section Scripts{
    <script>
        const invalidNVModel = '@TempData["InvalidNVModel"]';
        function cancelEditProfileNV(){
            window.open(location.origin + `/NhanVien/NhanVienProfile?idnv=@Model.NhanVien.Id`, '_self');
        }

        $("#input-ngaysinh-nhanvien").daterangepicker({
            singleDatePicker: true,
            autoApply: true,
            applyButtonClasses: false,
            autoUpdateInput: true,
            startDate: '@Model.NhanVien.NgaySinh.Value.ToShortDateString()',
            locale: {
                format: 'DD/MM/YYYY'
            }
        }, function (start) {
            $("#input-ngaysinh-nhanvien").val(start.format('DD/MM/YYYY'));
        });
    </script>
    <script src="~/js/NhanVienProfile.js"></script>
}